<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dr_rect_rounded_12"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="27dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="26dp"
        android:text="@string/write_memo_title"
        android:textColor="@color/color_dark_grey"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edittext_memo"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@drawable/dr_rect_rounded_border_2"
        android:gravity="top"
        android:hint="@string/write_memo_hint"
        android:padding="17dp"
        android:textSize="17sp" />

    <Button
        android:id="@+id/button_write_memo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/dialog_button_background_color"
        android:enabled="false"
        android:text="@string/write_button"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textview_no_write_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:text="@string/write_no_text"
        android:textColor="@color/black"
        android:textSize="17sp" />

</LinearLayout>